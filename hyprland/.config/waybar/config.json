{
  "layer": "top",
  "position": "top",
  "modules-left": [],
  "modules-right": [
	"network",
    "pulseaudio",
    "battery",
	"bluetooth",
    "clock#date",
    "clock",
    "custom/power"
  ],
  "clock": {
    "format": "{:%H:%M}"
  },
  "clock#date": {
    "format": "{:%a %d}"
  },
  "battery": {
    "interval": 60,
    "states": {
        "full": 100,
        "full-ish": 80,
		"mid": 60,
		"need-juice": 40,
		"really-need-juice": 20,
    },
    "format": "b{icon}",
    "format-charging": "b{icon}+",
    "format-icons": [
		"[=    ]",
		"[==   ]",
		"[===  ]",
		"[==== ]",
		"[=====]"
	],
	"tooltip-format": "{capacity}%",
	"max-length": 25
  },
  "pulseaudio": {
    "format": "v{volume}%",
    "format-muted": "vM",
    "on-click": "pavucontrol"
  },
  "custom/power": {
    "format": "⏻",
    "on-click": "systemctl poweroff",
    "tooltip": false
  },
  "network": {
	"format-wifi": "{icon}",
	"format-icons": ["󰤯", "󰤟", "󰤢", "󰤥", "󰤨"],
    "format-ethernet": "{ifname} ",
    "format-disconnected": "Disconnected ⚠",
    "tooltip-format": "{essid}: {signalStrength}%",
	"on-click": "nm-connection-editor"
  },
  "bluetooth": {
	"format": " {status}",
	"format-disabled": "ᛒ̸",
	"format-connected": "",
	"tooltip-format": "{controller_alias}\t{controller_address}",
	"tooltip-format-connected": "{controller_alias}\t{controller_address}\n\n{device_enumerate}",
	"tooltip-format-enumerate-connected": "{device_alias}\t{device_address}",
	"on-click": "blueman-manager"
  }
}
